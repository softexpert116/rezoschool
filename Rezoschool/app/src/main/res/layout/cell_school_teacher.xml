<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/tools">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        >
        <RelativeLayout
            android:id="@+id/ly_sel"
            android:layout_width="match_parent"
            android:background="@color/colorSubBackground"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/ly_m"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center_vertical"
                >
                <RelativeLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    >
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img_photo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/default_user"
                        />
                    <RelativeLayout
                        android:id="@+id/ly_status"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/status_offline"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="0dp"
                        />
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_centerVertical="true"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:text="Name: "
                            android:textSize="20dp"
                            android:fontFamily="@font/gibson_regular"
                            />
                        <TextView
                            android:id="@+id/txt_teacher"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text=""
                            android:textSize="20dp"
                            android:textColor="@color/colorText"
                            android:fontFamily="@font/gibson_regular"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        >
                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:textAlignment="textEnd"
                            android:text="Course: "
                            android:textSize="20dp"
                            android:fontFamily="@font/gibson_regular"
                            />
                        <TextView
                            android:id="@+id/txt_course"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text=""
                            android:textSize="20dp"
                            android:textColor="@color/colorText"
                            android:fontFamily="@font/gibson_regular"
                            />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ly_tool"
                android:layout_width="wrap_content"
                android:layout_below="@+id/ly_m"
                android:layout_alignParentEnd="true"
                android:gravity="center_vertical"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btn_reset"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="Reset"
                    android:background="@color/colorPrimaryDark"
                    android:textAllCaps="false"
                    android:clickable="false"
                    android:focusable="false"
                    android:textColor="@color/white"
                    />
                <Button
                    android:id="@+id/btn_syllabus"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="Syllabus"
                    android:layout_marginLeft="20dp"
                    android:background="@color/colorPrimaryDark"
                    android:textAllCaps="false"
                    android:clickable="false"
                    android:focusable="false"
                    android:textColor="@color/white"
                    />
                <Button
                    android:id="@+id/btn_allow"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:focusable="false"
                    android:clickable="false"
                    android:text="Allow"
                    android:textColor="@color/white"
                    android:background="@color/colorPrimaryDark"
                    android:textAllCaps="false"
                    />
            </LinearLayout>
            <Button
                android:id="@+id/btn_remove"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:focusable="false"
                android:clickable="false"
                android:background="@drawable/ic_erase"
                />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>