<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorMainBackground"
    android:padding="16dp"
    tools:context=".fragments.StudentSchoolFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="School"
                android:textSize="20dp"
                android:textColor="@color/colorText"
                android:textStyle="bold"
                android:fontFamily="@font/gibson_regular"
                />
            <RelativeLayout
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/circle_shape"
                android:padding="5dp"
                >
                <ImageView
                    android:id="@+id/img_status"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_rejected1"
                    />
            </RelativeLayout>
            <TextView
                android:id="@+id/txt_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rejected"
                android:layout_marginLeft="5dp"
                android:textStyle="italic"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                >
                <Button
                    android:id="@+id/btn_choose"
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:text="choose school"
                    android:background="@drawable/btn_round"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    />
            </LinearLayout>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_school"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentPadding="10dp"
            android:layout_marginTop="5dp"
            app:cardBackgroundColor="@color/colorSubBackground"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    >
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_school"
                        />
                    <TextView
                        android:id="@+id/txt_school_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/colorText"
                        android:textSize="20dp"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/gibson_regular"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    >
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/default_user"
                        />
                    <TextView
                        android:id="@+id/txt_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/colorText"
                        android:textSize="20dp"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/gibson_regular"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    >
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@android:drawable/sym_action_email"
                        />
                    <TextView
                        android:id="@+id/txt_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/colorText"
                        android:textSize="20dp"
                        android:layout_marginLeft="5dp"
                        android:fontFamily="@font/gibson_regular"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    >
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/sym_action_call"
                        />
                    <TextView
                        android:id="@+id/txt_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/colorText"
                        android:textSize="20dp"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/gibson_regular"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    >
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/btn_star"
                        />
                    <TextView
                        android:id="@+id/txt_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/colorText"
                        android:textSize="20dp"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/gibson_regular"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ly_tool"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    android:visibility="visible"
                    >
                    <ImageView
                        android:id="@+id/img_chat"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:src="@android:drawable/stat_notify_chat"
                        android:background="@drawable/btn_round"
                        android:padding="5dp"
                        />
                    <ImageView
                        android:id="@+id/img_sms"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:background="@drawable/btn_round"
                        android:src="@android:drawable/ic_dialog_email"
                        android:padding="5dp"
                        android:layout_marginLeft="10dp"
                        />
                    <ImageView
                        android:id="@+id/img_video"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:background="@drawable/btn_round"
                        android:src="@android:drawable/presence_video_online"
                        android:padding="5dp"
                        android:layout_marginLeft="10dp"
                        />
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/txt_public"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:layout_gravity="end"
                android:text="Public"
                android:textSize="15dp"
                android:padding="5dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:fontFamily="@font/gibson_regular"
                />
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_photo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/default_user"
                android:layout_gravity="bottom|end"
                android:layout_marginRight="0dp"
                />
            <RelativeLayout
                android:id="@+id/ly_status"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/status_offline"
                android:layout_gravity="bottom|end"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="0dp"
                />
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Class"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorText"
            android:textStyle="bold"
            android:fontFamily="@font/gibson_regular"
            />
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/colorSubBackground"
            android:layout_marginTop="5dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="3dp"
                android:padding="10dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_margin="5dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ico_class"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:textAlignment="textEnd"
                                android:text="Level: "
                                android:textSize="20dp"
                                android:fontFamily="@font/gibson_regular"
                                />
                            <TextView
                                android:id="@+id/txt_class_level"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text=""
                                android:textSize="20dp"
                                android:textColor="@color/colorText"
                                android:fontFamily="@font/gibson_regular"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            >
                            <TextView
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:textAlignment="textEnd"
                                android:text="Name: "
                                android:textSize="20dp"
                                android:fontFamily="@font/gibson_regular"
                                />
                            <TextView
                                android:id="@+id/txt_class_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text=""
                                android:textSize="20dp"
                                android:textColor="@color/colorText"
                                android:fontFamily="@font/gibson_regular"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Parent"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorText"
            android:textStyle="bold"
            android:fontFamily="@font/gibson_regular"
            />
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/colorSubBackground"
            android:layout_marginTop="5dp"
            app:contentPadding="5dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img_parent_photo"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/default_user"
                        android:layout_gravity="center_vertical"
                        android:layout_centerVertical="true"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center_vertical"
                        android:layout_toRightOf="@+id/img_parent_photo"
                        android:layout_toLeftOf="@+id/chk_teacher"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginTop="5dp"
                            >
                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/default_user"
                                />
                            <TextView
                                android:id="@+id/txt_parent_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/colorText"
                                android:textSize="20dp"
                                android:layout_marginLeft="10dp"
                                android:fontFamily="@font/gibson_regular"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginTop="5dp"
                            >
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@android:drawable/sym_action_email"
                                />
                            <TextView
                                android:id="@+id/txt_parent_email"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/colorText"
                                android:textSize="20dp"
                                android:layout_marginLeft="5dp"
                                android:fontFamily="@font/gibson_regular"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginTop="5dp"
                            >
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@android:drawable/sym_action_call"
                                />
                            <TextView
                                android:id="@+id/txt_parent_phone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/colorText"
                                android:textSize="20dp"
                                android:layout_marginLeft="10dp"
                                android:fontFamily="@font/gibson_regular"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>