<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMainBackground"
    tools:context=".ui.StudentDetailActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/course"
                    android:layout_marginLeft="10dp"
                    />
                <EditText
                    android:id="@+id/edit_course"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="English"
                    android:focusable="false"
                    android:textColor="@color/colorPrimary"
                    android:editable="false"
                    android:layout_marginLeft="20dp"
                    android:textStyle="bold"
                    android:background="@color/transparent"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ly_month"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@color/calendar_background"
                >
                <TextView
                    android:id="@+id/txt_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2019-8"

                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    />
            </LinearLayout>
            <com.github.sundeepk.compactcalendarview.CompactCalendarView
                android:layout_below="@+id/ly_month"
                android:id="@+id/calendarView"
                android:layout_width="match_parent"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_height="220dp"
                app:compactCalendarTargetHeight="220dp"
                app:compactCalendarTextSize="18sp"
                app:compactCalendarBackgroundColor="@color/calendar_background"
                app:compactCalendarTextColor="#fff"
                app:compactCalendarCurrentSelectedDayBackgroundColor="@color/gray"
                app:compactCalendarCurrentDayBackgroundColor="#B71C1C"
                app:compactCalendarMultiEventIndicatorColor="#2BDADA"
                />
            <ScrollView
                android:layout_width="match_parent"
                android:padding="10dp"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/daily"
                        android:layout_marginTop="10dp"
                        />
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        app:cardBackgroundColor="@color/colorSubBackground"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:id="@+id/ly_absence"
                                android:visibility="visible"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:id="@+id/txt_absence_day"
                                    android:layout_width="230dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/absence"
                                    android:textColor="@color/colorAccent"
                                    />
                                <Button
                                    android:id="@+id/btn_justification"
                                    android:layout_width="wrap_content"
                                    android:layout_height="30dp"
                                    android:text="@string/view_doc"
                                    android:textAllCaps="false"
                                    android:background="@color/colorPrimaryDark"
                                    android:textColor="@color/white"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:layout_marginTop="5dp"
                                >
                                <TextView
                                    android:layout_width="130dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/evaluation"
                                    android:textColor="@color/colorText"
                                    />
                                <TextView
                                    android:id="@+id/txt_evaluation_day"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textColor="@color/colorText"

                                    />

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:layout_marginTop="5dp"
                                >
                                <TextView
                                    android:layout_width="130dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/exam_result"
                                    android:textColor="@color/colorText"
                                    />
                                <TextView
                                    android:id="@+id/txt_result_day"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textColor="@color/colorText"

                                    />
                                <Button
                                    android:id="@+id/btn_update"
                                    android:layout_width="wrap_content"
                                    android:layout_height="30dp"
                                    android:background="@color/colorPrimaryDark"
                                    android:text="@string/update"
                                    android:textColor="@color/white"
                                    android:textAllCaps="false"
                                    android:visibility="gone"
                                    />
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/weekly"
                        android:layout_marginTop="15dp"
                        />
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        app:cardBackgroundColor="@color/colorSubBackground"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="130dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/absence"
                                    android:textColor="@color/colorAccent"
                                    />
                                <TextView
                                    android:id="@+id/txt_absence_week"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textColor="@color/colorText"

                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_marginTop="5dp"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="130dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/evaluation"
                                    android:textColor="@color/colorText"
                                    />
                                <TextView
                                    android:id="@+id/txt_evaluation_week"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textColor="@color/colorText"

                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_marginTop="5dp"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="130dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/exam_result"
                                    android:textColor="@color/colorText"
                                    />
                                <TextView
                                    android:id="@+id/txt_result_week"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textColor="@color/colorText"

                                    />
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/monthly"
                        android:layout_marginTop="15dp"
                        />
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        app:cardBackgroundColor="@color/colorSubBackground"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="130dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/absence"
                                    android:textColor="@color/colorAccent"
                                    />
                                <TextView
                                    android:id="@+id/txt_absence_month"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textColor="@color/colorText"

                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_marginTop="5dp"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="130dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/evaluation"
                                    android:textColor="@color/colorText"
                                    />
                                <TextView
                                    android:id="@+id/txt_evaluation_month"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textColor="@color/colorText"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_marginTop="5dp"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="130dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/exam_result"
                                    android:textColor="@color/colorText"
                                    />
                                <TextView
                                    android:id="@+id/txt_result_month"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textColor="@color/colorText"
                                    />
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:id="@+id/txt_quarter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/quarterly"
                        android:layout_marginTop="15dp"
                        />
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        app:cardBackgroundColor="@color/colorSubBackground"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="130dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/absence"
                                    android:textColor="@color/colorAccent"
                                    />
                                <TextView
                                    android:id="@+id/txt_absence_quarter"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textColor="@color/colorText"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_marginTop="5dp"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="130dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/evaluation"
                                    android:textColor="@color/colorText"
                                    />
                                <TextView
                                    android:id="@+id/txt_evaluation_quarter"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textColor="@color/colorText"

                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_marginTop="5dp"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="130dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/exam_result"
                                    android:textColor="@color/colorText"
                                    />
                                <TextView
                                    android:id="@+id/txt_result_quarter"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textColor="@color/colorText"

                                    />
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:id="@+id/ly_absence_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:alpha="0.5"
        android:visibility="gone"
        >
    </RelativeLayout>
    <ImageView
        android:id="@+id/img_absence"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:visibility="gone"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:src="@drawable/default_pic1"
        android:layout_centerInParent="true"
        />
</RelativeLayout>