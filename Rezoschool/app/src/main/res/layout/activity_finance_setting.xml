<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMainBackground"
    tools:context=".ui.FinanceSettingActivity">

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ly_fee"
        />
    <RelativeLayout
        android:id="@+id/ly_fee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:padding="20dp"
        android:background="@color/colorPrimaryDark"
        android:gravity="center_vertical"
        >
        <TextView
            android:id="@+id/txt_dollar"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="$"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:textSize="20dp"
            />
        <EditText
            android:id="@+id/edit_fee"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="0.00"
            android:layout_toRightOf="@+id/txt_dollar"
            android:paddingLeft="15dp"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:textColor="@color/colorText"
            android:singleLine="true"
            android:inputType="numberDecimal"
            android:background="@drawable/frame_round"
            android:layout_toLeftOf="@+id/btn_set"
            />
        <Button
            android:id="@+id/btn_set"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Set"
            android:background="@android:color/transparent"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_alignParentEnd="true"
            />
    </RelativeLayout>
</RelativeLayout>