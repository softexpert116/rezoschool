<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMainBackground"
    tools:context=".ui.NewSyllabusActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="School Number"
            android:textSize="20dp"
            android:fontFamily="@font/gibson_regular"
            />
        <EditText
            android:id="@+id/edit_school"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="school number"
            android:focusable="false"
            android:textSize="20dp"
            android:textColor="@color/colorText"
            android:fontFamily="@font/gibson_regular"
            android:inputType="text"
            android:editable="false"
            android:paddingLeft="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Course Name"
            android:fontFamily="@font/gibson_regular"
            android:textSize="20dp"
            />
        <EditText
            android:id="@+id/edit_course"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="course name"
            android:textSize="20dp"
            android:textColor="@color/colorText"
            android:fontFamily="@font/gibson_regular"
            android:inputType="text"
            android:paddingLeft="5dp"
            android:focusable="false"
            android:editable="false"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="20dp"
            android:fontFamily="@font/gibson_regular"
            android:text="Date"
            />
        <EditText
            android:id="@+id/edit_date"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="text"
            android:hint="01/01/2020"
            android:textSize="20dp"
            android:textColor="@color/colorText"
            android:fontFamily="@font/gibson_regular"
            android:focusable="false"
            android:paddingLeft="5dp"
            android:editable="false"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/gibson_regular"
            android:textSize="20dp"
            android:text="Time"
            />
        <EditText
            android:id="@+id/edit_time"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="text"
            android:hint="00:00 PM"
            android:textSize="20dp"
            android:textColor="@color/colorText"
            android:fontFamily="@font/gibson_regular"
            android:focusable="false"
            android:paddingLeft="5dp"
            android:editable="false"
            />
        <Button
            android:id="@+id/btn_create"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Create"
            android:fontFamily="@font/gibson_bold"
            android:textColor="@android:color/white"
            android:background="@drawable/btn_round" />
    </LinearLayout>
</RelativeLayout>