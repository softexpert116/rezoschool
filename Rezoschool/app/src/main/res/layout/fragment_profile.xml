<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMainBackground"
    android:orientation="vertical"
    tools:context=".fragments.ProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <RelativeLayout
                    android:id="@+id/ly_cover"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:background="@color/colorPrimary"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/profile_bg"
                        android:alpha="0.2"
                        />
                </RelativeLayout>
                <TextView
                    android:id="@+id/txt_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/school"
                    android:layout_margin="20dp"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    />
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_photo"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/default_user"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/ly_cover"
                    android:layout_marginTop="-60dp"
                    />
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ly_cover"
                    android:layout_marginTop="-30dp"
                    android:layout_marginRight="40dp"
                    android:layout_alignParentEnd="true"
                    android:backgroundTint="@color/colorPrimaryDark"
                    app:borderWidth="0dp"
                    android:src="@android:drawable/ic_menu_edit"
                    />
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fab1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ly_cover"
                    android:layout_marginTop="-30dp"
                    android:layout_marginLeft="40dp"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:src="@android:drawable/ic_menu_revert"
                    app:borderWidth="0dp"
                    />
            </RelativeLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentPadding="10dp"
                android:layout_margin="16dp"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <RelativeLayout
                        android:id="@+id/ly_status"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:background="@drawable/status_offline"
                        android:layout_centerVertical="true"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/ly_status"
                        android:layout_toLeftOf="@+id/img_edit_status"
                        android:layout_marginRight="10dp"
                        >
                        <TextView
                            android:id="@+id/txt_available"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/available"
                            android:background="@color/white"
                            android:padding="5dp"
                            android:textColor="#707070"
                            />
                        <TextView
                            android:id="@+id/txt_unavailable"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/unavailable"
                            android:padding="5dp"
                            android:visibility="gone"
                            android:textColor="#707070"
                            />
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/img_edit_status"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/ic_menu_edit"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:visibility="visible"
                        />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentPadding="10dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="30dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/name"
                        android:fontFamily="@font/gibson_regular"
                        />
                    <EditText
                        android:id="@+id/edit_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/username"
                        android:inputType="text"
                        android:singleLine="true"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/gibson_regular"
                        android:textColor="@color/colorText"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/email"
                        android:fontFamily="@font/gibson_regular"
                        />
                    <EditText
                        android:id="@+id/edit_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/email_address"
                        android:inputType="textEmailAddress"
                        android:singleLine="true"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/gibson_regular"
                        android:textColor="@color/colorText"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/phone"
                        android:fontFamily="@font/gibson_regular"
                        />
                    <EditText
                        android:id="@+id/edit_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/phone_number"
                        android:enabled="false"
                        android:textColor="@color/colorText"
                        android:inputType="phone"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/gibson_regular" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/country"
                        android:fontFamily="@font/gibson_regular"
                        />
                    <EditText
                        android:id="@+id/edit_country"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:hint="@string/course_name"
                        android:fontFamily="@font/gibson_regular"
                        android:textColor="@color/colorText"
                        android:singleLine="true"
                        android:layout_marginLeft="20dp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/city"
                        android:fontFamily="@font/gibson_regular"
                        />
                    <EditText
                        android:id="@+id/edit_city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/city_name"
                        android:layout_marginLeft="20dp"
                        android:singleLine="true"
                        android:fontFamily="@font/gibson_regular"
                        android:textColor="@color/colorText"
                        />

                    <LinearLayout
                        android:id="@+id/ly_school"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="@string/school_number"
                            />
                        <EditText
                            android:id="@+id/edit_school_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/school_number"
                            android:singleLine="true"
                            android:layout_marginLeft="20dp"
                            android:textColor="@color/colorText"
                            />
                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            >
                            <RadioGroup
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:orientation="horizontal"
                                >
                                <RadioButton
                                    android:id="@+id/radio_primary"
                                    android:layout_width="150dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/primary_school"
                                    android:fontFamily="@font/gibson_regular"
                                    />
                                <RadioButton
                                    android:id="@+id/radio_secondary"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:fontFamily="@font/gibson_regular"
                                    android:text="@string/secondary_school"
                                    />
                            </RadioGroup>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            >
                            <RadioGroup
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:orientation="horizontal"
                                >
                                <RadioButton
                                    android:id="@+id/radio_private"
                                    android:layout_width="150dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/private_laic"
                                    android:fontFamily="@font/gibson_regular"
                                    />
                                <RadioButton
                                    android:id="@+id/radio_public"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:fontFamily="@font/gibson_regular"
                                    android:text="@string/private_confessional"
                                    />
                            </RadioGroup>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

    <!-- TODO: Update blank fragment layout -->
        </LinearLayout>
    </ScrollView>
</LinearLayout>