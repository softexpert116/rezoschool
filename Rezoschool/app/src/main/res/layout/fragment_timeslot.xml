<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMainBackground"
    tools:context=".fragments.TimeslotFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/ly_header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                >
                <Button
                    android:id="@+id/btn_monday"
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:text="Monday"
                    android:textColor="@color/white"
                    android:background="@color/transparent"
                    />
                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/gray_light"
                    />
                <Button
                    android:id="@+id/btn_tuesday"
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:text="Tuesday"
                    android:textColor="@color/white"
                    android:background="@color/transparent"
                    />
                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/gray_light"
                    />
                <Button
                    android:id="@+id/btn_wednesday"
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:text="Wednesday"
                    android:textColor="@color/white"
                    android:background="@color/transparent"
                    />
                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/gray_light"
                    />
                <Button
                    android:id="@+id/btn_thursday"
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:text="Thursday"
                    android:textColor="@color/white"
                    android:background="@color/transparent"
                    />
                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/gray_light"
                    />
                <Button
                    android:id="@+id/btn_friday"
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:text="Friday"
                    android:textColor="@color/white"
                    android:background="@color/transparent"
                    />
                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/gray_light"
                    />
                <Button
                    android:id="@+id/btn_saturday"
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:text="Saturday"
                    android:textColor="@color/white"
                    android:background="@color/transparent"
                    />
                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/gray_light"
                    />
                <Button
                    android:id="@+id/btn_sunday"
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:text="Sunday"
                    android:textColor="@color/white"
                    android:background="@color/transparent"
                    />
                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/gray_light"
                    />
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ly_no_items"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        android:layout_centerInParent="true"
        >
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_no_item"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_items"
            />

    </LinearLayout>
    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ly_header"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_light"
        android:layout_below="@+id/ly_header"
        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@android:drawable/ic_input_add"
        android:visibility="visible"
        android:layout_margin="16dp" />
</RelativeLayout>