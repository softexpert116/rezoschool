<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMainBackground"
    tools:context=".ui.NewCourseActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="16dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_class"
                android:textSize="20dp"
                android:fontFamily="@font/gibson_regular"
                />
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                >
                <EditText
                    android:id="@+id/edit_class"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="@string/choose_class"
                    android:inputType="text"
                    android:singleLine="true"
                    android:paddingLeft="5dp"
                    android:textSize="20dp"
                    android:textColor="@color/colorText"
                    android:fontFamily="@font/gibson_regular"
                    android:background="@color/transparent"
                    />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/course"
                android:textSize="20dp"
                android:fontFamily="@font/gibson_regular"
                />
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                >
                <EditText
                    android:id="@+id/edit_course"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="@string/course_name"
                    android:inputType="text"
                    android:singleLine="true"
                    android:paddingLeft="5dp"
                    android:textSize="20dp"
                    android:textColor="@color/colorText"
                    android:fontFamily="@font/gibson_regular"
                    android:background="@color/transparent"
                    />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/weekdays"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:fontFamily="@font/gibson_regular"
                />
            <com.dpro.widgets.WeekdaysPicker
                android:id="@+id/weekdays"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:sunday_first_day="false"
                android:layout_marginTop="10dp"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                >
                <TextView
                    android:id="@+id/txt_start"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="@string/start_time"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/gibson_regular"
                    />
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/txt_start"
                    android:layout_toLeftOf="@+id/btn_clear_time"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    >
                    <EditText
                        android:id="@+id/edit_start_time"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:inputType="datetime"
                        android:singleLine="true"
                        android:focusable="false"
                        android:paddingLeft="5dp"
                        android:textColor="@color/colorText"
                        android:background="@color/transparent"
                        android:editable="false"
                        />
                </androidx.cardview.widget.CardView>

                <Button
                    android:id="@+id/btn_clear_time"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_alignParentEnd="true"
                    android:text="@string/clear"
                    android:layout_centerVertical="true"
                    android:textColor="@color/white"
                    android:background="@color/colorAccent"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                >
                <TextView
                    android:id="@+id/txt_end"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="@string/end_time"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/gibson_regular"
                    />
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/btn_set_time"
                    android:layout_toRightOf="@id/txt_end"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    >
                    <EditText
                        android:id="@+id/edit_end_time"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:inputType="datetime"
                        android:singleLine="true"
                        android:focusable="false"
                        android:background="@color/transparent"
                        android:editable="false"
                        android:textColor="@color/colorText"
                        android:layout_marginLeft="5dp"
                        />
                </androidx.cardview.widget.CardView>

                <Button
                    android:id="@+id/btn_set_time"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_alignParentEnd="true"
                    android:text="@string/set"
                    android:layout_centerVertical="true"
                    android:textColor="@color/white"
                    android:background="@color/colorPrimaryDark"
                    />
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/ly_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:padding="10dp"
                android:visibility="gone"
                />
            <Button
                android:id="@+id/btn_create"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="50dp"
                android:text="@string/create"
                android:fontFamily="@font/gibson_bold"
                android:textColor="@android:color/white"
                android:background="@drawable/btn_round" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>