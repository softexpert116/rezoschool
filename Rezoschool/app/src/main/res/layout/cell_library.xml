<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="120dp">
        <ImageView
            android:id="@+id/img_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_book"
            android:layout_centerVertical="true"
            />
        <LinearLayout
            android:layout_toRightOf="@+id/img_icon"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@+id/sw_public"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textSize="18dp"
                android:fontFamily="@font/gibson_bold"
                />
            <TextView
                android:id="@+id/txt_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:fontFamily="@font/gibson_regular"
                />
            <TextView
                android:id="@+id/txt_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category 1"
                android:layout_marginTop="5dp"
                android:textColor="@color/colorAccent"
                android:textSize="12dp"
                />
        </LinearLayout>
        <belka.us.androidtoggleswitch.widgets.ToggleSwitch
            android:id="@+id/sw_public"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textSize="10dp"
            custom:activeTextColor="@color/white"
            custom:inactiveBgColor="@android:color/white"
            custom:inactiveTextColor="@android:color/black"
            custom:separatorColor="@color/gray_very_light"
            android:layout_centerVertical="true"
            android:focusable="false"
            custom:textToggleLeft="Public"
            custom:textToggleRight="Private"
            custom:activeBgColor="@android:color/holo_blue_dark"
            />
        <Button
            android:id="@+id/btn_remove"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/ic_erase"
            android:focusable="false"
            android:layout_marginTop="-10dp"
            />
    </RelativeLayout>

</RelativeLayout>