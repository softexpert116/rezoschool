<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:orientation="vertical"
    android:background="@color/colorMainBackground"
    tools:context=".fragments.SchoolExamFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:orientation="vertical"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardBackgroundColor="@color/white"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    >
                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:background="@color/colorAccentLight"
                            android:padding="5dp"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Exam count per month by course: "
                                android:background="@color/colorAccent"
                                android:padding="3dp"
                                android:layout_marginLeft="10dp"
                                android:textColor="@color/white"
                                />
                            <com.jaredrummler.materialspinner.MaterialSpinner
                                android:id="@+id/spinner0"
                                android:layout_width="wrap_content"
                                app:ms_background_color="@color/colorPrimaryDark"
                                app:ms_text_color="@color/white"
                                android:layout_marginLeft="10dp"
                                android:layout_height="wrap_content"/>
                            <com.jaredrummler.materialspinner.MaterialSpinner
                                android:id="@+id/spinner_year0"
                                android:layout_width="100dp"
                                app:ms_background_color="@color/colorPrimaryLight"
                                app:ms_text_color="@color/white"
                                android:layout_marginLeft="10dp"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </HorizontalScrollView>

                    <com.jonas.jgraph.graph.NChart
                        android:id="@+id/chartView"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="5dp"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp"
                    >
                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorAccentLight"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:padding="5dp"
                                >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Exams of Student: "
                                    android:background="@color/colorAccent"
                                    android:padding="3dp"
                                    android:layout_marginLeft="10dp"
                                    android:textColor="@color/white"
                                    />
                                <Button
                                    android:id="@+id/btn_student"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Select"
                                    android:layout_marginLeft="10dp"
                                    android:textColor="@color/colorPrimary"
                                    android:background="@color/transparent"
                                    android:textAllCaps="false"
                                    />
                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/img_student"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/default_user"
                                    />
                                <com.jaredrummler.materialspinner.MaterialSpinner
                                    android:id="@+id/spinner_year1"
                                    android:layout_width="100dp"
                                    app:ms_background_color="@color/colorPrimaryLight"
                                    app:ms_text_color="@color/white"
                                    android:layout_marginLeft="75dp"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:gravity="center_vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Period: "
                                    android:layout_marginLeft="10dp"
                                    android:textColor="@color/white"
                                    />
                                <com.jaredrummler.materialspinner.MaterialSpinner
                                    android:id="@+id/spinner11"
                                    android:layout_width="150dp"
                                    app:ms_background_color="@color/colorPrimaryDark"
                                    app:ms_text_color="@color/white"
                                    android:layout_marginLeft="10dp"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Course: "
                                    android:layout_marginLeft="20dp"
                                    android:textColor="@color/white"
                                    />
                                <com.jaredrummler.materialspinner.MaterialSpinner
                                    android:id="@+id/spinner12"
                                    android:layout_width="150dp"
                                    app:ms_background_color="@color/colorPrimaryDark"
                                    app:ms_text_color="@color/white"
                                    android:layout_marginLeft="10dp"
                                    android:layout_height="wrap_content"/>

                            </LinearLayout>
                        </LinearLayout>

                    </HorizontalScrollView>

                    <com.jonas.jgraph.graph.NChart
                        android:id="@+id/chartViewStudent"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="5dp"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp"
                    >
                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorAccentLight"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:padding="5dp"
                                >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Teacher Performance: "
                                    android:background="@color/colorAccent"
                                    android:padding="3dp"
                                    android:layout_marginLeft="10dp"
                                    android:textColor="@color/white"
                                    />
                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/img_teacher"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_marginLeft="10dp"
                                    android:src="@drawable/default_user"
                                    />
                                <TextView
                                    android:id="@+id/txt_teacher"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:singleLine="true"
                                    android:ellipsize="end"
                                    android:layout_marginLeft="5dp"
                                    android:textColor="@color/white"
                                    />
                                <com.jaredrummler.materialspinner.MaterialSpinner
                                    android:id="@+id/spinner_year2"
                                    android:layout_width="100dp"
                                    app:ms_background_color="@color/colorPrimaryLight"
                                    app:ms_text_color="@color/white"
                                    android:layout_marginLeft="35dp"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:gravity="center_vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Period: "
                                    android:layout_marginLeft="10dp"
                                    android:textColor="@color/white"
                                    />
                                <com.jaredrummler.materialspinner.MaterialSpinner
                                    android:id="@+id/spinner21"
                                    android:layout_width="150dp"
                                    app:ms_background_color="@color/colorPrimaryDark"
                                    app:ms_text_color="@color/white"
                                    android:layout_marginLeft="10dp"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Course: "
                                    android:layout_marginLeft="20dp"
                                    android:textColor="@color/white"
                                    />
                                <com.jaredrummler.materialspinner.MaterialSpinner
                                    android:id="@+id/spinner22"
                                    android:layout_width="150dp"
                                    app:ms_background_color="@color/colorPrimaryDark"
                                    app:ms_text_color="@color/white"
                                    android:layout_marginLeft="10dp"
                                    android:layout_height="wrap_content"/>

                            </LinearLayout>
                        </LinearLayout>

                    </HorizontalScrollView>

                    <com.jonas.jgraph.graph.NChart
                        android:id="@+id/chartViewTeacher"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="5dp"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Exams of Class: "
                    android:background="@color/colorAccent"
                    android:padding="3dp"
                    android:textColor="@color/white"
                    />
                <Button
                    android:id="@+id/btn_class"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/colorPrimary"
                    android:background="@color/transparent"
                    android:textAllCaps="false"
                    />
            </LinearLayout>
            <com.jonas.jgraph.graph.NChart
                android:id="@+id/chartViewClass"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:padding="3dp"
                android:textColor="@color/white"
                android:text="@string/monthly_top_members"
                android:layout_marginTop="10dp"
                />
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                >
                <LinearLayout
                    android:id="@+id/ly_month"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="100dp" />
            </HorizontalScrollView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:padding="3dp"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:text="@string/quarterly_top_members"
                />
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                >
                <LinearLayout
                    android:id="@+id/ly_quarter"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="100dp" />
            </HorizontalScrollView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btn_exam"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/view_exams"
                    android:background="@drawable/btn_round"
                    android:textColor="@color/white"
                    android:layout_marginBottom="10dp"
                    />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <!-- TODO: Update blank fragment layout -->


</LinearLayout>