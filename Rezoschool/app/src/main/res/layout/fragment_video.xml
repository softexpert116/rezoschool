<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMainBackground"
    tools:context=".fragments.VideoFragment">

    <RelativeLayout
        android:id="@+id/ly_tab"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <Button
                android:id="@+id/btn_my"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="My Group"
                android:textSize="20dp"
                android:textColor="@color/colorText"
                android:focusable="false"
                android:fontFamily="@font/gibson_bold"
                />
            <Button
                android:id="@+id/btn_other"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="20dp"
                android:background="@color/colorPrimary"
                android:text="Other Group"
                android:textColor="#d0d0d0"
                android:focusable="false"
                android:fontFamily="@font/gibson_bold"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/txt_waiting"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:text="1"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="30dp"
            android:layout_centerVertical="true"
            android:background="@drawable/txt_badge"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:gravity="center"
            android:visibility="gone"
            />
        <RelativeLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#d0d0d0"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            ></RelativeLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_below="@+id/ly_tab"
        >
        <LinearLayout
            android:id="@+id/ly_no_items"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone"
            android:layout_centerInParent="true"
            >
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_no_item"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No Items"
                />

        </LinearLayout>
        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@android:color/transparent"
            android:scrollbars="none"
            ></ListView>
    </RelativeLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@android:drawable/ic_input_add"
        android:layout_margin="16dp" />
</RelativeLayout>