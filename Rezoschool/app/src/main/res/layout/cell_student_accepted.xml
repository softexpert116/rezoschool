<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:cardBackgroundColor="@color/colorSubBackground"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img_photo"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/default_user"
                        android:layout_margin="5dp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center_vertical"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >
                            <TextView
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:text="Name: "
                                android:fontFamily="@font/gibson_regular"
                                android:textSize="20dp"
                                />
                            <TextView
                                android:id="@+id/txt_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/gibson_regular"
                                android:textColor="@color/colorText"
                                android:textSize="20dp"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            >
                            <TextView
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:text="Class: "
                                android:fontFamily="@font/gibson_regular"
                                android:textSize="20dp"
                                />
                            <TextView
                                android:id="@+id/txt_class"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/gibson_regular"
                                android:textColor="@color/colorText"
                                android:textSize="20dp"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            >
                            <TextView
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:text="School: "
                                android:fontFamily="@font/gibson_regular"
                                android:textSize="20dp"
                                />
                            <TextView
                                android:id="@+id/txt_school"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/gibson_regular"
                                android:textColor="@color/colorText"
                                android:textSize="20dp"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    >
                    <ImageView
                        android:id="@+id/img_chat"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:src="@android:drawable/stat_notify_chat"
                        android:background="@drawable/btn_round"
                        android:padding="5dp"
                        />
                    <ImageView
                        android:id="@+id/img_call"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:src="@android:drawable/stat_sys_phone_call"
                        android:background="@drawable/btn_round"
                        android:padding="5dp"
                        android:layout_marginLeft="10dp"
                        />
                    <ImageView
                        android:id="@+id/img_sms"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:background="@drawable/btn_round"
                        android:src="@android:drawable/ic_dialog_email"
                        android:padding="5dp"
                        android:layout_marginLeft="10dp"
                        />
                    <ImageView
                        android:id="@+id/img_video"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:background="@drawable/btn_round"
                        android:src="@android:drawable/presence_video_online"
                        android:padding="5dp"
                        android:layout_marginLeft="10dp"
                        />
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/txt_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NEW"
                android:fontFamily="@font/gibson_bold"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/frame_round"
                android:padding="5dp"
                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>