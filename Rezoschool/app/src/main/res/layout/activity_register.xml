<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ui.RegisterActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:padding="20dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_marginTop="20dp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/logo1" />

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@drawable/frame_round">


                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/ico_name" />

                <EditText
                    android:id="@+id/edit_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:background="@android:color/transparent"
                    android:hint="Name (School Staff/Teacher/Parent)"
                    android:fontFamily="@font/gibson_regular"
                    android:textColor="#000000"
                    android:singleLine="true"
                    android:inputType="text" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@drawable/frame_round">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/ico_email" />

                <EditText
                    android:id="@+id/edit_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:background="@android:color/transparent"
                    android:hint="Email Address"
                    android:textColor="#000000"
                    android:singleLine="true"
                    android:fontFamily="@font/gibson_regular"
                    android:inputType="textEmailAddress" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ly_school_number"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@drawable/frame_round">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/ico_nric" />

                <EditText
                    android:id="@+id/edit_school_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:singleLine="true"
                    android:background="@android:color/transparent"
                    android:hint="School Authorization"
                    android:textColor="#000000"
                    android:inputType="number"
                    android:fontFamily="@font/gibson_regular" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ly_school"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:background="@drawable/frame_border">
                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:orientation="horizontal"
                        >
                        <RadioButton
                            android:id="@+id/radio_primary"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="Primary School"
                            android:fontFamily="@font/gibson_regular"
                            android:textColor="@android:color/white"
                            android:buttonTint="@android:color/white"
                            />
                        <RadioButton
                            android:id="@+id/radio_secondary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/gibson_regular"
                            android:text="Secondary School"
                            android:textColor="@android:color/white"
                            android:buttonTint="@android:color/white"
                            />
                    </RadioGroup>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:background="@drawable/frame_border">
                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:orientation="horizontal"
                        >
                        <RadioButton
                            android:id="@+id/radio_private"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="Private laÃ¯c"
                            android:fontFamily="@font/gibson_regular"
                            android:textColor="@android:color/white"
                            android:buttonTint="@android:color/white"
                            />
                        <RadioButton
                            android:id="@+id/radio_public"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/gibson_regular"
                            android:text="Private confessional"
                            android:textColor="@android:color/white"
                            android:buttonTint="@android:color/white"
                            />
                    </RadioGroup>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@drawable/frame_round">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/phone" />
                <com.hbb20.CountryCodePicker
                    android:id="@+id/txt_countryCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:ccp_defaultNameCode="CI"
                    app:ccp_contentColor="#000000"
                    android:layout_marginLeft="10dp"
                    app:ccp_textSize="14dp"
                    android:clickable="false"
                    app:ccp_clickable="false"
                    />
                <EditText
                    android:id="@+id/edit_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@android:color/transparent"
                    android:hint="Phone Number"
                    android:enabled="false"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:inputType="phone"
                    android:fontFamily="@font/gibson_regular" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@drawable/frame_round">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/ico_nric" />

                <EditText
                    android:id="@+id/edit_country"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:background="@android:color/transparent"
                    android:hint="Country Name"
                    android:enabled="false"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:fontFamily="@font/gibson_regular" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@drawable/frame_round">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/ico_nric" />

                <EditText
                    android:id="@+id/edit_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:background="@android:color/transparent"
                    android:hint="City Name"
                    android:textColor="#000000"
                    android:singleLine="true"
                    android:fontFamily="@font/gibson_regular" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="I want to be a"
                    android:textSize="16dp"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/gibson_regular"
                    android:textColor="@android:color/white"
                    />
                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal"
                    >
                    <RadioButton
                        android:id="@+id/radio_school"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="School Staff"
                        android:fontFamily="@font/gibson_regular"
                        android:textColor="@android:color/white"
                        android:buttonTint="@android:color/white"
                        />
                    <RadioButton
                        android:id="@+id/radio_teacher"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/gibson_regular"
                        android:text="Teacher"
                        android:textColor="@android:color/white"
                        android:buttonTint="@android:color/white"
                        />
                    <RadioButton
                        android:id="@+id/radio_parent"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/gibson_regular"
                        android:text="Parent"
                        android:textColor="@android:color/white"
                        android:buttonTint="@android:color/white"
                        />
                </RadioGroup>
            </LinearLayout>
            <Button
                android:id="@+id/btn_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_round"
                android:text="REGISTER"
                android:fontFamily="@font/gibson_bold"
                android:textColor="@android:color/white"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>