<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMainBackground"
    tools:context=".ui.NewClassActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Class Level"
                android:textSize="20dp"
                android:fontFamily="@font/gibson_regular"
                />
            <EditText
                android:id="@+id/edit_level"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="level name"
                android:inputType="text"
                android:singleLine="true"
                android:textSize="20dp"
                android:focusable="false"
                android:editable="false"
                android:textColor="@color/colorText"
                android:fontFamily="@font/gibson_regular"
                android:paddingLeft="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Class Name"
                android:textSize="20dp"
                android:fontFamily="@font/gibson_regular"
                />
            <EditText
                android:id="@+id/edit_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:inputType="text"
                android:hint="class name"
                android:singleLine="true"
                android:paddingLeft="5dp"
                android:textSize="20dp"
                android:textColor="@color/colorText"
                android:fontFamily="@font/gibson_regular"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/gibson_regular"
                    android:textSize="20dp"
                    android:text="Courses"
                    />
                <TextView
                    android:id="@+id/txt_course"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Click here to choose"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/colorPrimaryDark"
                    />
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/ly_course"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                >

            </LinearLayout>
            <Button
                android:id="@+id/btn_create"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="50dp"
                android:text="Create"
                android:fontFamily="@font/gibson_bold"
                android:textColor="@android:color/white"
                android:background="@drawable/btn_round" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>