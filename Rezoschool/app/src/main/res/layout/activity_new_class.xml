<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_background"
    tools:context=".ui.NewClassActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Class Level"
            android:fontFamily="@font/gibson_bold"
            />
        <EditText
            android:id="@+id/edit_level"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="level name"
            android:inputType="text"
            android:singleLine="true"
            android:paddingLeft="5dp"
            android:textColor="#222222"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Class Name"
            android:fontFamily="@font/gibson_bold"
            />
        <EditText
            android:id="@+id/edit_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="text"
            android:hint="class name"
            android:singleLine="true"
            android:paddingLeft="5dp"
            android:textColor="#222222"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/gibson_bold"
            android:text="Start Time"
            />
        <EditText
            android:id="@+id/edit_start_time"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="text"
            android:hint="01:00 PM"
            android:focusable="false"
            android:editable="false"
            android:paddingLeft="5dp"
            android:textColor="#222222"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/gibson_bold"
            android:text="End Time"
            />
        <EditText
            android:id="@+id/edit_end_time"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="text"
            android:hint="03:00 PM"
            android:focusable="false"
            android:editable="false"
            android:paddingLeft="5dp"
            android:textColor="#222222"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/gibson_bold"
            android:text="Choose Course"
            />
        <EditText
            android:id="@+id/edit_course"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="text"
            android:hint="course name"
            android:focusable="false"
            android:paddingLeft="5dp"
            android:editable="false"
            android:textColor="#222222"
            android:textStyle="bold|italic"
            />
        <Button
            android:id="@+id/btn_create"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Create"
            android:fontFamily="@font/gibson_bold"
            android:textColor="@android:color/white"
            android:background="@drawable/btn_round" />
    </LinearLayout>
</RelativeLayout>