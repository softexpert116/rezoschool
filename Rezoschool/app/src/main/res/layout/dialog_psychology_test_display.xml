<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="25dp"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:layout_marginTop="10dp"
            />

        <EditText
            android:id="@+id/edit_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Full name"
            android:singleLine="true"
            android:paddingLeft="10dp"
            android:gravity="start"
            android:editable="false"
            android:textColor="@color/colorText"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Year of birth"
            android:layout_marginTop="10dp"
            />
        <EditText
            android:id="@+id/edit_birth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Year of birth (eg. 2001)"
            android:paddingLeft="10dp"
            android:editable="false"
            android:textColor="@color/colorText"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Class"
            android:layout_marginTop="10dp"
            />
        <EditText
            android:id="@+id/edit_class"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/_class"
            android:singleLine="true"
            android:paddingLeft="10dp"
            android:gravity="start"
            android:editable="false"
            android:textColor="@color/colorText"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Psychology Section"
            android:layout_marginTop="10dp"
            />
        <com.jaredrummler.materialspinner.MaterialSpinner
            android:id="@+id/spinner_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Section"
            android:text="section1"
            app:ms_background_color="@color/colorAccent"
            android:textColor="@color/white"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Score"
            android:layout_marginTop="10dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/txt_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:textColor="@color/colorAccent"
                android:textSize="30dp"
                />
            <TextView
                android:id="@+id/txt_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Excellent"
                android:textSize="30dp"
                android:textColor="@color/colorText"
                android:layout_marginLeft="30dp"
                android:textStyle="italic"
                />

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:text="Close"
        android:textColor="@color/white"
        android:background="@drawable/btn_round"
        />
</LinearLayout>