<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ImageView
                android:id="@+id/img_callback"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_menu_callback"
                android:layout_centerVertical="true"
                />
            <LinearLayout
                android:layout_toLeftOf="@+id/ibtn_link"
                android:layout_toRightOf="@+id/img_callback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:textAlignment="textEnd"
                        android:text="Number: "
                        android:fontFamily="@font/gibson_regular"
                        />
                    <TextView
                        android:id="@+id/txt_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="123456789"
                        android:textSize="20dp"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/gibson_regular"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    >
                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:textAlignment="textEnd"
                        android:text="Message: "
                        android:fontFamily="@font/gibson_regular"
                        />
                    <TextView
                        android:id="@+id/txt_message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Please call forward to 12034938"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/gibson_regular"
                        />
                </LinearLayout>

            </LinearLayout>
            <ImageButton
                android:id="@+id/ibtn_remove"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@android:drawable/ic_delete"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:focusable="false"
                android:layout_marginRight="10dp"
                />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>