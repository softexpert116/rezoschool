<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="5dp"
        >
        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
            android:padding="5dp"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_photo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/sample_student"
            android:layout_gravity="center_vertical"
            app:civ_border_color="@color/colorPrimary"
            app:civ_border_width="2px"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@+id/img_photo"
            android:layout_toLeftOf="@+id/chk_student"
            android:layout_centerVertical="true"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="textEnd"
                    android:text="Name: "
                    android:fontFamily="@font/gibson_regular"
                    />
                <TextView
                    android:id="@+id/txt_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Olga"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/gibson_regular"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                >
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="textEnd"
                    android:text="Class: "
                    android:fontFamily="@font/gibson_regular"
                    />
                <TextView
                    android:id="@+id/txt_class"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="CP1A"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/gibson_regular"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                >
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="textEnd"
                    android:text="School: "
                    android:fontFamily="@font/gibson_regular"
                    />
                <TextView
                    android:id="@+id/txt_school"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="School A"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/gibson_regular"
                    />
            </LinearLayout>
        </LinearLayout>
        <net.igenius.customcheckbox.CustomCheckBox
            android:id="@+id/chk_student"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            app:color_checked="@color/colorPrimaryDark"
            />
        <TextView
            android:id="@+id/txt_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New"
            android:textColor="@color/colorPrimary"
            android:layout_marginLeft="5dp"
            />
    </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>