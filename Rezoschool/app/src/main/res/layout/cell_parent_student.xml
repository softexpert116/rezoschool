<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/colorSubBackground"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_photo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/default_user"
                android:layout_gravity="center_vertical"
                />
            <LinearLayout
                android:id="@+id/ly1"
                android:layout_toRightOf="@+id/img_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:textAlignment="textEnd"
                        android:text="@string/name_"
                        android:textColor="@color/colorText"
                        />
                    <TextView
                        android:id="@+id/txt_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text=""
                        android:textColor="@color/colorText"

                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:textAlignment="textEnd"
                        android:text="@string/class_"
                        android:textColor="@color/colorText"
                        />
                    <TextView
                        android:id="@+id/txt_class"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text=""
                        android:textColor="@color/colorText"

                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:textAlignment="textEnd"
                        android:text="@string/level_"
                        android:textColor="@color/colorText"
                        />
                    <TextView
                        android:id="@+id/txt_level"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text=""
                        android:textColor="@color/colorText"

                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:textAlignment="textEnd"
                        android:text="@string/school_"
                        android:textColor="@color/colorText"
                        />
                    <TextView
                        android:id="@+id/txt_school"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text=""
                        android:textColor="@color/colorText"

                        />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ly2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/frame_border_dark"
                android:layout_below="@+id/txt_school_label"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    >
                    <ImageView
                        android:id="@+id/img_chat"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:src="@android:drawable/stat_notify_chat"
                        android:background="@drawable/btn_round"
                        android:padding="5dp"
                        />
                    <ImageView
                        android:id="@+id/img_sms"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:background="@drawable/btn_round"
                        android:src="@android:drawable/ic_dialog_email"
                        android:padding="5dp"
                        android:layout_marginLeft="10dp"
                        />
                    <ImageView
                        android:id="@+id/img_video"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:background="@drawable/btn_round"
                        android:src="@android:drawable/presence_video_online"
                        android:padding="5dp"
                        android:layout_marginLeft="10dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        >
                        <Button
                            android:id="@+id/btn_teacher"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="30dp"
                            android:text="@string/view_teachers"
                            android:textAllCaps="false"
                            android:background="@drawable/btn_round"
                            android:textColor="@color/white"

                            />
                        <Button
                            android:id="@+id/btn_exam"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="10dp"
                            android:layout_height="30dp"
                            android:text="@string/view_exams"
                            android:textAllCaps="false"
                            android:background="@drawable/btn_round"
                            android:textColor="@color/white"

                            />
                        <Button
                            android:id="@+id/btn_pay"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="10dp"
                            android:layout_height="30dp"
                            android:text="@string/pay_fee"
                            android:textAllCaps="false"
                            android:background="@drawable/btn_round"
                            android:textColor="@color/white"

                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <Button
                            android:id="@+id/btn_inform"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_marginBottom="5dp"
                            android:text="@string/inform_absence"
                            android:textAllCaps="false"
                            android:background="@drawable/btn_round"
                            android:textColor="@color/white"

                            />
                        <ImageView
                            android:id="@+id/img_pic"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:src="@drawable/default_pic"
                            android:adjustViewBounds="true"
                            android:layout_gravity="center"
                            android:scaleType="centerInside"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="10dp"
                            android:padding="5dp"
                            android:background="@drawable/frame_border"
                            />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/txt_school_label"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_below="@+id/ly1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="-15dp"
                android:background="#888888"
                android:gravity="center"
                android:text="@string/school"
                android:textColor="@color/white" />
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_school_photo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@+id/ly1"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="-5dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/default_user"
                android:layout_gravity="center_vertical"
                />
            <RelativeLayout
                android:id="@+id/ly_status"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/status_offline"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="5dp"
                android:layout_below="@+id/img_school_photo"
                android:layout_marginTop="-15dp"
                android:layout_marginRight="20dp"
                />
            <TextView
                android:id="@+id/txt_school_staff"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_below="@+id/img_school_photo"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:textStyle="bold"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginTop="-5dp"
                />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>