<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_background"
    android:layout_margin="10dp"
    android:orientation="vertical"
    tools:context=".fragments.AlumniFragment">

    <RelativeLayout
        android:id="@+id/ly_search_school"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/frame_border"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@android:drawable/ic_menu_search"
            android:layout_centerVertical="true"
            />
        <EditText
            android:id="@+id/edit_search_school"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:paddingLeft="30dp"
            android:hint="school name"
            android:inputType="text"
            android:imeOptions="actionSearch"
            android:fontFamily="@font/gibson_regular"
            android:background="@android:color/transparent"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/ly_search_student"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/frame_border"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@android:drawable/ic_menu_search"
            android:layout_centerVertical="true"
            />
        <EditText
            android:id="@+id/edit_search_student"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:paddingLeft="30dp"
            android:hint="student name"
            android:inputType="text"
            android:imeOptions="actionSearch"
            android:fontFamily="@font/gibson_regular"
            android:background="@android:color/transparent"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="match_parent">
        <ListView
            android:id="@+id/listView"
            android:layout_above="@+id/btn_bulk_sms"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/btn_bulk_sms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bulk SMS"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:textAllCaps="false"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/white"
            />
    </RelativeLayout>

</LinearLayout>