<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_user"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/default_user"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:fontFamily="@font/gibson_bold"
            android:layout_toRightOf="@+id/img_user"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/txt_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:fontFamily="@font/gibson_regular"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        >
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/default_pic"
            android:layout_centerInParent="true"
            />
        <ImageView
            android:id="@+id/img_media"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/default_pic"
            android:scaleType="centerCrop"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/txt_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:fontFamily="@font/gibson_regular"
        android:text=""
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingBottom="5dp"
        android:gravity="center_vertical"
        >
        <ImageButton
            android:id="@+id/ibtn_like"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/ic_like"
            />
        <TextView
            android:id="@+id/txt_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12"
            android:layout_marginLeft="5dp"
            />
        <ImageButton
            android:id="@+id/ibtn_dislike"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/ic_dislike"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:id="@+id/txt_dislike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:layout_marginLeft="5dp"
            />
        <ImageButton
            android:id="@+id/ibtn_comment"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/ic_comment"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="3dp"
            />
        <ImageButton
            android:id="@+id/ibtn_report"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/ic_report"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="3dp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ly_feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="10dp"
        >

    </LinearLayout>

</LinearLayout>